{
  "name": "rtJsonSyncServer",
  "version": "0.0.0",
  "description": "Server of JSON object synchronization",
  "main": "index.js",
  "repository": "https://github.com/zettant/realtime-object-sync",
  "author": "Takeshi Kubo <takeshi@quvox.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn proto && yarn build:live",
    "proto": "pbjs -t static-module -w commonjs -o src/proto/messages.js src/proto/messages.proto && pbjs -t static-module src/proto/messages.proto | pbts -o src/proto/messages.d.ts -",
    "build": "yarn proto && tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "yarn proto && cross-env NODE_ENV=test jest --coverage --no-cache --runInBand",
    "keypair": "openssl ecparam -genkey -name prime256v1 -out tmp-keypair.pem && openssl ec -in tmp-keypair.pem -outform PEM -pubout -out testPubkey.pem && openssl ec -in tmp-keypair.pem -outform PEM -out testSeckey.pem && rm -f tmp-keypair.pem"
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/log4js": "^2.3.5",
    "@types/node": "^14.0.23",
    "@types/supertest": "^2.0.10",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "config": "^3.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "protobufjs": "^6.10.0"
  }
}
